<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    @android:id/list is an identifier in the android framework. It is used
    to match the ListView with the ListView of a ListFragment or ListActivity.
    -->
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--
    @android:id/empty is an identifier in the android framework. It is used
    to match the view with the empty content of a ListView in a screen. So, this
    view will be displayed automatically.
    -->
    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_empty" />

</FrameLayout>